<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:progress_content"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

     <RoundProgressBar
         ohos:id="$+id:progress_wheel"
         ohos:height="$float:progress_size"
         ohos:width="$float:progress_size"
         ohos:top_margin="-56vp"
         ohos:padding="5vp"
         ohos:infinite="true"
         />
    <Text
        ohos:id="$+id:progressTextView"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:padding="5vp"
        ohos:text="Loading"
        ohos:text_color="#33475f"
        ohos:text_size="$float:text_sm_size"
        />
</DirectionalLayout>